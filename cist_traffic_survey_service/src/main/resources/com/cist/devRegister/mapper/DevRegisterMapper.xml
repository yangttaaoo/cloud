	</delete>
	<!-- 删除设备关联事件检测 -->
	<delete id="deleteDevEventAct" parameterType="java.util.HashMap">
		delete from
		JCSJ_DEVICE_EVENT_ACT where device_id=#{pk_id}
	</delete>
	<!--添加设备具备功能 -->
