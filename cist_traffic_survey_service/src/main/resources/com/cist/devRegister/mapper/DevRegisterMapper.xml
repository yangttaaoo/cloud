	<!-- 添加事件监听 -->
	<insert id="addDevEventAct" parameterType="java.util.HashMap">
		insert into JCSJ_DEVICE_EVENT_ACT(device_id,fk_event_act_id)
		SELECT A.*
		FROM(
		<foreach collection="list" item="id" index="index"
			separator="UNION ALL">
			SELECT
			#{pk_id} device_id,
			#{id} fk_event_act_id
			FROM dual
		</foreach>
		)A
	</insert>
